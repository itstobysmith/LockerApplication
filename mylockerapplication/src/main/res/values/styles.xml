<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="white_bg_button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/locker_white_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/locker_theme_color</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="fontStyle">italic</item>
        <item name="cardCornerRadius">8dp</item>
        <!--<item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>-->
    </style>


    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="blue_bg_button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/locker_theme_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/locker_white_color</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="fontStyle">italic</item>
    </style>

    <!--  create attribute -->
    <attr name="Locker_theme_color" format="color" />
    <attr name="Locker_white_bg_button" format="reference" />
    <attr name="Locker_blue_bg_button" format="reference" />
</resources>