<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/locker_keyboard_background_color"
    android:paddingBottom="@dimen/locker_padding_10"
    android:paddingTop="@dimen/locker_padding_10">

    <LinearLayout
        android:id="@+id/first_kb_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/locker_padding_10"
        android:paddingBottom="@dimen/locker_padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/one">
        </ImageView>

        <ImageView
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/two">
        </ImageView>

        <ImageView
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/three">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_kb_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/locker_padding_10"
        android:paddingBottom="@dimen/locker_padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/four">
        </ImageView>

        <ImageView
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/five">
        </ImageView>

        <ImageView
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/six">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_kb_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/locker_padding_10"
        android:paddingBottom="@dimen/locker_padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/seven">
        </ImageView>

        <ImageView
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/eight">
        </ImageView>

        <ImageView
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/nine">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_kb_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/locker_padding_10"
        android:paddingBottom="@dimen/locker_padding_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/done"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/done">
        </ImageView>

        <ImageView
            android:id="@+id/zero"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/zero">
        </ImageView>

        <ImageView
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginLeft="@dimen/locker_padding_20"
            android:layout_marginRight="@dimen/locker_padding_20"
            android:background="@drawable/clear">
        </ImageView>

    </LinearLayout>

</LinearLayout>