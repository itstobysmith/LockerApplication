<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_view_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="574dp"
        android:layout_height="293dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/locker_white_color"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/pick_a_package"
                android:layout_width="390dp"
                android:layout_height="70dp"
                android:background="@color/locker_theme_color"
                android:text="@string/pick_a_package"
                android:textColor="#212121"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/deliver_a_package"
                android:layout_width="390dp"
                android:layout_height="70dp"
                android:background="@color/locker_white_color"
                android:text="@string/deliver_a_package"
                android:textColor="#1976D2"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>